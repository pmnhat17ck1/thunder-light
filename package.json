{
  "name": "thunder-light",
  "version": "1.0.0",
  "description": "The lightest and fastest library based on Elysia",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmnhat17ck1/thunder-light.git"
  },
  "author": "Nhat Pham",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --parallel",
    "format": "turbo format --continue --",
    "format:fix": "turbo format --continue -- --write",
    "lint": "turbo lint --continue --",
    "lint:fix": "turbo lint --continue -- --apply",
    "typecheck": "turbo typecheck"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.0.26",
  "dependencies": {
    "elysia": "^1.0.27"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@turbo/gen": "^1.10.16",
    "@types/bun": "latest",
    "reflect-metadata": "^0.2.2",
    "@elysiajs/static": "^1.0.3",
    "@elysiajs/cron": "^1.0.3",
    "@elysiajs/apollo": "^1.1.0",
    "@bull-board/api": "^5.20.4",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
